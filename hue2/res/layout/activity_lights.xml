<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LightsActivity" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/colorbar" />
    
    <ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    
	    	<LinearLayout
	    	    android:id="@+id/lights_result_container"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:orientation="vertical">
	    	    
	    	    <!-- Groups (currently just hardcoded all group) -->
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="22dp"
			        android:layout_marginTop="20dp"
			        android:layout_marginBottom="5dp"
			        android:textAllCaps="true"
			        android:textStyle="bold"
			        android:textColor="#33b5e5"
			        android:text="@string/lights_groups" />
			    
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="1dp"       
			        android:layout_marginLeft="15dp"
			        android:layout_marginRight="15dp"
			        android:background="#33b5e5" />
			    
			    <RelativeLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="15dp"
				    android:layout_marginRight="15dp"
				    android:background="@drawable/dark_button_background"
				    android:clickable="true">
				
				    <ImageView
				        android:id="@+id/lights_light_color"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignParentLeft="true"
				        android:layout_centerVertical="true"
				        android:layout_marginBottom="20dp"
				        android:layout_marginLeft="10dp"
				        android:layout_marginTop="20dp"
				        android:src="@drawable/lights" />
				
				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_alignParentLeft="true"
				        android:layout_centerVertical="true"
				        android:layout_marginLeft="46dp"
				        android:layout_marginTop="15dp"
				        android:layout_marginBottom="15dp"
				        android:orientation="vertical">
				        
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:orientation="horizontal">
				            
				            <TextView
								android:id="@+id/lights_light_name"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:layout_marginLeft="4dp"
								android:ellipsize="end"
								android:singleLine="true"
								android:textSize="16sp"
								android:text="@string/lights_all" />
				            
				           	<Button
					            android:id="@+id/lights_all_on"
					            style="?android:attr/buttonStyleSmall"
					            android:background="@drawable/blue_button_background"
					            android:layout_width="51dp"
					            android:layout_height="40dp"
					            android:text="@string/lights_on" />
					        
					        <Button
					            android:id="@+id/lights_all_off"
					            style="?android:attr/buttonStyleSmall"
					            android:layout_width="51dp"
					            android:layout_height="40dp"
					            android:layout_marginRight="15dp"
					            android:text="@string/lights_off" />
				        </LinearLayout>
				        
				        <!-- Scrollable presets -->
				        <HorizontalScrollView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginRight="15dp"
				            android:layout_marginTop="5dp">
				           	
					        <LinearLayout
					            android:id="@+id/lights_light_presets"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:orientation="horizontal" />
				        </HorizontalScrollView>
				    </LinearLayout>
				
				</RelativeLayout>
			    
			    <!-- Individual lights -->
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="22dp"
			        android:layout_marginTop="20dp"
			        android:layout_marginBottom="5dp"
			        android:textAllCaps="true"
			        android:textStyle="bold"
			        android:textColor="#33b5e5"
			        android:text="@string/lights_lights" />
			    
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="1dp"       
			        android:layout_marginLeft="15dp"
			        android:layout_marginRight="15dp"
			        android:background="#33b5e5" />
				
			    <LinearLayout
			        android:id="@+id/lights_list"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical" >
			    </LinearLayout>
	    	</LinearLayout>
	</ScrollView>
</LinearLayout>